        alt="Model 3"
        class="h-full w-full object-cover object-center"
        src="model-3.avif"
        id="bg-image-model3"
    />
</Section>

<script>
    function isEdge() {
        if (
            navigator.userAgent.indexOf("Edge") > -1 ||
            navigator.userAgent.indexOf("Edg") > -1
        ) {
            return true;
        } else {
            return false;
        }
    }

    var imageElement = document.querySelector(
        "#bg-image-model3"
    ) as HTMLImageElement;

    if (isEdge()) {
        imageElement.src = "model-3.webp";
    } else {
        imageElement.src = "model-3.avif";
    }
</script>
