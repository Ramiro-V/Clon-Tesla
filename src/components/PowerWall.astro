---
import Section from "./Section.astro";
---

<Section
    title="Solar y Powerwall"
    subtitle="Energía para todos"
    color="black"
    id="powerwall"
>
    <div slot="footer" class="gap-x-6 flex mx-auto">
        <a
            class="border-[3px] border-black bg-black text-sm rounded font-medium text-white px-16 py-2 inline-block transition-colors hover:border-gray-800 hover:bg-gray-800"
            href="#"
        >
            Más informacion</a
        >
    </div>

    <img
        slot="background"
        alt="Solar y Powerwall"
        class="h-full w-full object-cover object-center"
        src="powerwall.avif"
        id="bg-image-powerwall"
    />
</Section>

<script>
    function isEdge() {
        if (
            navigator.userAgent.indexOf("Edge") > -1 ||
            navigator.userAgent.indexOf("Edg") > -1
        ) {
            return true;
        } else {
            return false;
        }
    }

    var imageElement = document.querySelector(
        "#bg-image-powerwall"
    ) as HTMLImageElement;

    if (isEdge()) {
        imageElement.src = "powerwall.webp";
    } else {
        imageElement.src = "powerwall.avif";
    }
</script>
